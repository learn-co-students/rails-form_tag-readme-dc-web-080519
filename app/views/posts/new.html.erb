<h3>Post Form</h3>

<form action="<%= posts_path %>" method="POST">

  <%= form_tag posts_path do %>

  <label>Post title:</label><br>
  <%= text_field_tag :'post[title]' %><br><br>

  <!-- <input type="text" id="post_title" name="post[title]"><br><br> -->

  <label>Post description:</label><br>
  <%= text_area_tag :'post[description]' %><br><br>
  <!-- <textarea name="post[description]" id="post_description"></textarea><br> -->

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag "Submit Post" %>
  <!-- <input type="submit" value="Submit Post"> -->

  <% end %>

</form>
